<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/msg_rProfilePic"
        android:layout_marginTop="10dp"
        android:src="@drawable/default_userpic"
        android:layout_width="47dp"
        android:layout_height="47dp"/>

    <TextView
        android:id="@+id/msg_rText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@id/msg_rProfilePic"
        android:layout_toRightOf="@id/msg_rProfilePic"
        android:background="@drawable/receiver_shape"
        android:padding="10dp"
        android:text="Receiver Messages here"
        android:textSize="14dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,SpUsage" />

    <ImageView
        android:id="@+id/msg_sImageView"
        android:layout_width="90dp"
        android:layout_height="78dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/msg_rImageView"
        android:layout_width="90dp"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/msg_sText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/msg_rText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/sender_shape"
        android:padding="10dp"
        android:text="sender messages"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />
</RelativeLayout>